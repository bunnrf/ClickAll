{
  "manifest_version": 2,

  "name": "ClickAll",
  "description": "This extension clicks things for you.",
  "version": "1.0",

  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "Click Here!",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["inject.js"]
    }
  ],
  "permissions": [
    "cookies",
    "<all_urls>",
    "activeTab",
    "contextMenus",
    "debugger"
  ]
}
